UserKnownHostsFile ~/.ssh/known_hosts

Host *
        AddKeysToAgent yes
        IgnoreUnknown UseKeychain
        UseKeychain yes

Host github.com
        HostName github.com
        User git
        IdentityFile ~/.ssh/key
        IdentitiesOnly yes

Host gitlab.com
        Hostname gitlab.com
        User git
        IdentityFile ~/.ssh/key
        IdentitiesOnly yes
